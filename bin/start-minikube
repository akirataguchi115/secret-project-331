#!/bin/bash

COMMAND="minikube"

if [[ "$OSTYPE" == "cygwin" || "$OSTYPE" == "msys" || "$OSTYPE" == "win32" ]]; then
  echo "🪟  Detected Windows"
  ARGUMENTS="minikube start --vm-driver=virtualbox --addons ingress $*"
elif [[ "$OSTYPE" == "darwin"* ]]; then
  echo "🍎 Detected macOS"
  ARGUMENTS="minikube start --addons ingress $*"
else
  echo "🐧 Detected Linux"
  ARGUMENTS="minikube start --addons ingress $*"
fi
echo "> $COMMAND $ARGUMENTS"
exec "$COMMAND" $ARGUMENTS
